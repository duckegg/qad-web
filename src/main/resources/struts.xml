<?xml version="1.0" encoding="UTF-8" ?>
<!--
********************************************************************************
Master struts config file, contains basic definitions.

It is recommended to separate Action definitions to multiple sub-config files
according to their functional modules, then include them in the master config file.

GENERAL GUIDANCE:
If there are more than 20 actions in one struts.xml, do consider move some actions
to sub config files.

THIS IS A MATER CONFIG, DO NOT DEFINE ANY ACTION HERE

@author Leo, 2012/05/30, modified
@author Leo, 2012/11/04, support regex in URL
@author leo.liao@hp.com, 2014/03/10, remove all actions to make it a real master config
********************************************************************************
-->
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <!-- =================================================================== -->
    <!-- Constants -->
    <!-- =================================================================== -->
    <constant name="struts.custom.i18n.resources" value="lang/global"/>
    <constant name="struts.devMode" value="false"/>
    <constant name="struts.ui.theme" value="bootstrap"/>
    <constant name="struts.ui.templateDir" value="template"/>
    <!-- To use parameters in the URL, after the action name, make sure this is set -->
    <!--<constant name="struts.enable.SlashesInActionNames" value="true"/>-->
    <!--<constant name="struts.mapper.alwaysSelectFullNamespace" value="false"/>-->
    <!-- From 2.1.9+ regular expressions can be defined defined in the action name. To use this form of wild card, the following constants must be set -->
    <!-- http://struts.apache.org/2.3.4.1/docs/wildcard-mappings.html -->
    <constant name="struts.enable.SlashesInActionNames" value="true"/>
    <constant name="struts.mapper.alwaysSelectFullNamespace" value="false"/>
    <!--<constant name="struts.patternMatcher" value="namedVariable"/>-->
    <constant name="struts.patternMatcher" value="regex"/>
    <!--
    LEO@2012/11/07: Do NOT use {method} in action name because method is an attribute in com.opensymphony.xwork2.ActionChainResult
    Use {function} instead
    -->
    <!-- Exclude BshServlet defined in web.xml -->
    <constant name="struts.action.excludePattern" value="/sysadm/bsh,/kaptcha,/_elasticsearch/.*,/static/.*"/>

    <!-- For RESTful-->
    <constant name="struts.action.extension" value="xhtml,,xml,json,action"/>

    <!-- === THIS IS A MATER CONFIG, DO NOT DEFINE ANY ACTION IN THIS STRUTS.XML == -->
    <include file="struts/qad-basic.xml"/>
    <include file="struts/qad-people.xml"/>
    <include file="struts/qad-query.xml"/>
    <include file="struts/qad-report.xml"/>
    <include file="struts/qad-devel.xml"/>
    <include file="struts/qad-admin.xml"/>
    <include file="struts/qad-search.xml"/>
    <include file="struts/qad-system.xml"/>
    <include file="struts/qad-utils.xml"/>
    <include file="struts/qad-post.xml"/>
    <include file="struts/qad-sample.xml"/>
    <!--<include file="struts/struts-mobile.xml"/>-->
    <!--<include file="struts/struts-appsec.xml"/>-->
    <!--<include file="struts/struts-demo.xml"/>-->
    <!--<include file="struts/struts-drill.xml"/>-->
    <!--<include file="struts/struts-cmdb.xml"/>-->
    <!--<include file="struts/struts-other.xml"/>-->
    <!--<include file="struts/struts-db.xml"/>-->
    <!--<include file="struts/struts-provision.xml"/>-->
    <!--<include file="struts/struts-report.xml"/>-->

    <!-- =================================================================== -->
    <!-- THIS IS A MATER CONFIG, DO NOT DEFINE ANY ACTION HERE   -->
    <!-- =================================================================== -->
</struts>