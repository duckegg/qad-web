<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <package name="system" extends="qad-basic" namespace="/">

        <!-- =================================================================== -->
        <!-- Actions: General -->
        <!-- =================================================================== -->
        <action name="index">
            <result type="freemarker">/WEB-INF/pages/home.ftl</result>
        </action>
        <action name="home">
            <result type="freemarker">/WEB-INF/pages/home.ftl</result>
        </action>
        <action name="sitemap">
            <result type="freemarker">/WEB-INF/pages/sitemap.ftl</result>
        </action>
        <action name="my" class="hpps.qad.core.portal.PortalAction" method="execute">
            <result name="success" type="freemarker">/WEB-INF/pages/commons/portal/my-portal.ftl</result>
        </action>
        <action name="help/{topic}" class="hpps.qad.base.action.HelpAction">
            <result name="success">/WEB-INF/pages/help/help-{1}.ftl</result>
        </action>
        <!-- Changelog -->
        <action name="changelog">
            <result name="success" type="freemarker">/WEB-INF/pages/commons/util/changelog.ftl</result>
        </action>
        <!-- Shotcuts -->
        <action name="shortcuts">
            <result name="success" type="freemarker">/WEB-INF/pages/commons/util/shortcuts.ftl</result>
        </action>
        <!-- UI Demo-->
        <action name="uidemo/{next}" class="hpps.qad.base.action.BasicAction" method="doDefault">
            <result name="success" type="freemarker">/uidemo/{1}.ftl</result>
        </action>
        <!-- Integration with external system -->
        <action name="outlink" class="hpps.qad.base.action.BasicAction" method="doDefault">
            <result name="success" type="freemarker">/WEB-INF/pages/commons/util/outlink.ftl</result>
        </action>
        <action name="datex/{function}" class="hpps.qad.core.citype.DataExchangeAction" method="${1}">
            <result name="success" type="freemarker">/WEB-INF/pages/commons/citype/datex-{1}.ftl</result>
            <result name="input" type="freemarker">/WEB-INF/pages/commons/citype/datex-imp.ftl</result>
            <interceptor-ref name="fileUpload">
                <param name="allowedTypes">text/csv,text/txt,application/vnd.ms-excel</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>
        </action>
        <!-- File download -->
        <action name="system/download" class="hpps.qad.base.action.SimpleDownloadAction" method="execute">
            <result name="screen" type="dispatcher">/WEB-INF/pages/commons/util/read-file.jsp</result>
            <result name="success" type="stream">
                <param name="contentType">application/octet-stream</param>
                <param name="inputName">downloadStream</param>
                <param name="contentDisposition">attachment;filename="${isoFilename}"</param>
            </result>
        </action>
        <!-- File upload -->
        <action name="system/upload/input" class="hpps.qad.base.action.UploadAction" method="input">
            <result name="input">/WEB-INF/pages/commons/file/upload-input.ftl</result>
        </action>
        <action name="system/upload" class="hpps.qad.base.action.UploadAction">
            <interceptor-ref name="defaultStack"/>
            <interceptor-ref name="fileUpload">
                <!--<param name="allowedTypes">text/plain</param>-->
                <!--<param name="maximumSize">5242880</param>-->
            </interceptor-ref>
            <result name="success">/WEB-INF/pages/commons/file/upload-commit.ftl</result>
            <result name="input">/WEB-INF/pages/commons/file/upload-input.ftl</result>
        </action>

        <!--@deprecated, use system/upload -->
        <!-- File upload -->
        <action name="upload/input" class="hpps.qad.base.action.UploadAction" method="input">
            <result name="input">/WEB-INF/pages/commons/file/upload-input.ftl</result>
        </action>
        <action name="upload" class="hpps.qad.base.action.UploadAction">
            <interceptor-ref name="defaultStack"/>
            <interceptor-ref name="fileUpload">
                <!--<param name="allowedTypes">text/plain</param>-->
                <!--<param name="maximumSize">5242880</param>-->
            </interceptor-ref>
            <result name="success">/WEB-INF/pages/commons/file/upload-commit.ftl</result>
            <result name="input">/WEB-INF/pages/commons/file/upload-input.ftl</result>
        </action>
    </package>
</struts>